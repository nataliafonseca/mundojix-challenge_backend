generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  enrolment String
  password  String
  name      String
  role      String
  createdAt DateTime @default(now()) @db.Timestamp(6)

  documents Document[]

  @@map("user")
}

model Document {
  id          String   @id @default(uuid())
  description String
  hours       Int
  type        String
  status      Boolean
  createdAt   DateTime @default(now()) @db.Timestamp(6)

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("document")
}
